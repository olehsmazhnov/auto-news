{
  "name": "auto-news",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon --watch app --watch components --watch lib --watch hooks --watch styles --watch types --watch public --watch .env --watch .env.local --watch next.config.mjs --watch tsconfig.json --ext ts,tsx,js,mjs,css,json --ignore .next --exec \"next dev\"",
    "dev:next": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "codex:notify": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\tasks\\codex-notify.ps1 -CommandLine \"codex\"",
    "codex:notify:test": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\tasks\\codex-notify.ps1 -CommandLine \"npm run build\""
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.1",
    "next": "^15.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tw-animate-css": "^1.3.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "eslint": "^9.21.0",
    "eslint-config-next": "^15.2.3",
    "nodemon": "^3.1.10",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.8.2"
  }
}
